<h2>Details about <em><%= @course.title %></em></h2>

<ul id="details">
  <li>
    Rating:
    <%= @course.rating %>
  </li>
  <li>
    Released on:
    <%= @course.release_date.strftime("%B %d, %Y") %>
  </li>
</ul>

<h3>Description:</h3>
<p id="description">
  <%= @course.description %>
</p>

<div class="row">
  <%= link_to 'Edit', edit_movie_path(@course), :class => 'btn btn-primary col-2' %>
  <%= link_to 'Delete', movie_path(@course), 'data-method' => 'delete', 'data-confirm' => 'Are you sure?', :class => 'btn btn-danger col-2' %>
  <%= link_to 'Back to movie list', movies_path, :class => 'btn btn-primary col-2' %>
</div>
