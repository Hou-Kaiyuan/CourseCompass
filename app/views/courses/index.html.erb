<h2>All Courses</h2>

<div class="row mb-3">
  <div class="col-md-8">
    <%= form_tag courses_path, method: :get, class: 'form-inline' do %>
      <div class="form-group">
        <%= text_field_tag :search, params[:search], placeholder: 'Search for courses', class: 'form-control mr-2' %>
        <%= submit_tag 'Search', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4 text-right">
    <%= link_to 'Add new course', new_course_path, class: 'btn btn-primary' %>
  </div>
</div>

<table class="table table-striped col-md-12" id="courses">
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Instructor</th>
      <th>Offering Term</th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td>
          <%= course.course_id + " " + course.course_title %>
        </td>
        <td>
          <%= course.instructor %>
        </td>
        <td>
          <%= course.offering_term %>
        </td>
        <td>
          <%= link_to "More about #{course.course_title}", course_path(course) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @courses, renderer: WillPaginate::ActionView::LinkRenderer %>

