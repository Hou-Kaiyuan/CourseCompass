<h2>All Courses</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Instructor</th>
      <th>Offering Term</th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td>
          <%= course.course_number + " " + course.course_title %>
        </td>
        <td>
          <%= course.instructor %>
        </td>
        <td>
          <%= course.offering_term %>
        </td>
        <td>
          <%= link_to "More about #{course.course_title}", course_path(course)%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new course', new_course_path, :class => 'btn btn-primary' %>
