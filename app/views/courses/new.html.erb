<h2>Create New Movie</h2>

<%= form_tag courses_path, :class => 'form' do %>
  <%= label :course, :title, 'Title', :class => 'col-form-label' %>
  <%= text_field :course, :title, :class => 'form-control' %>
  <%= label :course, :rating, 'Rating', :class => 'col-form-label'  %>
  <%= select :course, :rating, ['G', 'PG', 'PG-13', 'R', 'NC-17'], {}, { :class => 'form-control col-1'} %>
  <%= label :course, :release_date, 'Released On', :class => 'col-form-label'  %>
  <%= date_select :course, :release_date, {}, :class => 'form-control col-2 d-inline' %>
  <br/>
  <%= submit_tag 'Save Changes', :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', courses_path, :class => 'btn btn-secondary' %>
<% end %>
