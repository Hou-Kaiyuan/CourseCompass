<h1>Sign Up</h1>

<%= form_tag model: @user, url: signup_path do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
    <% @user.errors.full_messages.each do |message| %>
      <div> <%= message %> </div> 
    <% end %>
    </div>
  <% end %>
  <%= label :user, :first_name, 'First Name', :class => 'col-form-label' %>
  <%= text_field :user, :first_name, :class => 'form-control' %>
  <%= label :user, :last_name, 'Last Name', :class => 'col-form-label' %>
  <%= text_field :user, :last_name, :class => 'form-control' %>
  <%= label :user, :email, 'Email', :class => 'col-form-label' %>
  <%= text_field :user, :email, :class => 'form-control' %>
  <%= label :user, :password, 'Password', :class => 'col-form-label' %>
  <%= password_field :user, :password, :class => 'form-control' %>
  <%= label :user, :password, 'Password Confirmation', :class => 'col-form-label' %>
  <%= password_field :user, :password_confirmation, :class => 'form-control' %>
  <br/>
  <%= submit_tag 'Register', :class => 'btn btn-primary' %>
<% end %>

