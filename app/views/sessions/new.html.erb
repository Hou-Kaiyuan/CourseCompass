<h1>Login</h1>
<%= form_tag login_path, :class => 'form' do %>

  <% if flash[:alert] %>
    <div class="alert alert-warning">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= label :user, :email, 'Email', :class => 'col-form-label' %>
  <%= text_field :user, :email, :class => 'form-control' %>
  <%= label :user, :password, 'Password', :class => 'col-form-label' %>
  <%= password_field :user, :password, :class => 'form-control' %>
  <br/>
  <%= submit_tag 'Log In', :class => 'btn btn-primary' %>
  <%= link_to 'Sign Up', signup_path, :class => 'btn btn-secondary' %>
<% end %>